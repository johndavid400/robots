<h1><%= @article.title %></h1>

<table class="show">
  <thead>
    <tr>
      <th><%= t("title") %></th>
      <th><%= t("content") %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= link_to @article.title, admin_article_path(@article) %></td>
      <td><%= @article.content %></td>
      <td><%= link_to "Edit", edit_admin_article_path(@article), :method => :get %></td>
      <td><%= link_to "Delete", admin_article_path(@article), :method => :delete, :confirm => "Delete article?" %></td>
    </tr>
  </tbody>
</table>




